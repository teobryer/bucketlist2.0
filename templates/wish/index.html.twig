{% extends 'base.html.twig' %}

{% block title %}Hello WishController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ma liste de souhaits âœ…</h1>
    <a href="{{ path('add_wish')}}"> Ajouter des souhaits </a>

   <table class="table">
  <thead>
    <tr>
      <th scope="col">Titre</th>
      <th scope="col">Description</th>
      <th scope="col">Auteur</th>
      <th scope="col">Categorie</th>
      <th scope="col">Date</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
   

     {% for item in list_wishes %}
      
      <tr>
     
      <th scope="row">{{item.title}} </th>
      <td>{{item.description}} </td>
      <td>{{item.author}} </td>
      <td>{{item.categorie.nom}} </td>
      <td>{{item.dateCreated | date('Y-m-d') }} </td>
      <td><a href="{{ path('wishitem',{ 'id': item.id })  }}">Voir</a></td>
       <td>
            <a href="{{ path('modifier_wish',{id: item.id}) }}" class="btn btn-warning">
                <i class="fa fa-edit"></i>
            </a>

        </td>
            <td>
            <a href="{{ path('delete_wish',{id: item.id}) }}" class="btn btn-danger">
                <i class="fa fa-trash"></i>
            </a>

        </td>
    </tr>
   
    {% endfor %}
     
  
  </tbody>
</table>
</div>
{% endblock %}
